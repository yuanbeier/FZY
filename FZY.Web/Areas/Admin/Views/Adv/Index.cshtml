        $(document).ready(function () {
            $.ajax({
                url: virtualPath + "api/services/app/webSiteAppServer/GetHomePicListAsync",
                type: "Post",
                contentType:"application/json",
                success: function (data) {
                    console.log(data);
                    if (data.success) {
